{
	"info": {
		"_postman_id": "b2c3d4e5-f6a7-8901-bcde-f12345678901",
		"name": "Auth API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "GitHub authentication",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const result = pm.response.json()",
							"",
							"if (pm.response.code === 200) {",
							"    pm.environment.set('apiToken', result.token)",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{githubToken}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{apiUrl}}/api/v1/auth/githubAuth",
					"host": [
						"{{apiUrl}}"
					],
					"path": [
						"api",
						"v1",
						"auth",
						"githubAuth"
					]
				}
			},
			"response": []
		}
	]
}


# Application Configuration
NODE_ENV=development
APP_HOST=localhost
APP_PORT=3000
APP_GLOBAL_PREFIX=api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-database-password
DB_DATABASE=wykra_db

# Sentry Configuration (Optional - for error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LangChain / LLM Configuration
# Anthropic Claude API
ANTHROPIC_API_KEY=

# OpenAI API
OPENAI_API_KEY=

# LLM Provider Selection (anthropic or openai)
LLM_PROVIDER=anthropic
LLM_MODEL=claude-3-5-sonnet-20241022

# BrightData Configuration (for Instagram scraping)
BRIGHTDATA_API_KEY=your-brightdata-api-key
BRIGHTDATA_BASE_URL=https://api.brightdata.com
BRIGHTDATA_TIMEOUT=60000

# OpenRouter Configuration (for LLM analysis)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_TIMEOUT=60000
